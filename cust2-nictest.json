{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "enablepubip": {
            "type": "int",
            "metadata": {
                "description": "represents the disk sizes. "
            },
            "allowedValues": [
                0,
                1
            ],
            "defaultValue": 1
        }

    },
    "variables": {
        "imagePublisher": "MicrosoftWindowsServer",
        "vnetrgpname": "EVHE1-RGP-001",
        "existingvnetname": "evhe1dr-vnet-001",
        "imageOffer": "WindowsServer",
        "windowsOSVersion": "2012-R2-Datacenter",
        "apiVersion": "2015-06-15",
        "existingsubnetname": "evhe1dr-sub-004_172.25.12.0_24",
        "vnetID": "[resourceId(variables('vnetrgpname'), 'Microsoft.Network/virtualNetworks', variables('existingVNETName'))]",
        "subnetId": "[concat(variables('vnetID'),'/subnets/', variables('existingSubnetName'))]",
        "diskCaching": "ReadWrite",
        "storageaccounttype": "Standard_LRS",
        "publicipname": "boklyntest",
        "value": [
            [
                {
                    "name": "ipconfig",
                    "properties": {
                        "privateIPAllocationMethod": "Static",
                        "privateIPAddress": "172.25.12.20",
                        "subnet": {
                            "id": "[variables('subnetId')]"
                        }
                    }
                }
            ],
            [
                {
                    "name": "ipconfig1",
                    "properties": {
                        "privateIPAllocationMethod": "Static",
                        "privateIPAddress": "172.25.12.20",
                        "subnet": {
                            "id": "[variables('subnetId')]"
                        },
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicipname'))]"
                        }
                    }
                }
            ]
        ]
    },
    "resources": [
        {
            "apiVersion": "[variables('apiVersion')]",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "boklyntestnic",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": "[variables('value')[parameters('enablepubip')]]"
            }
        }
    ]
}